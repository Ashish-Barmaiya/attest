generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model project {
  id           String  @id
  name         String
  createdAt    BigInt
  tombstonedAt BigInt?

  @@map("projects")
}

/**
 * Holds the current head of the audit chain.
 */
model ChainHead {
  projectId     String @id
  lastSequence  Int
  lastChainHash String

  @@map("chain_head")
}

/**
 * Append-only audit log..
 */
model AuditEvent {
  projectId     String
  sequence      Int
  payloadJson   String
  payloadHash   String
  prevChainHash String
  chainHash     String
  createdAt     BigInt

  @@id([projectId, sequence])
  @@map("audit_events")
}

/**
 * API keys for authentication.
 */
model ApiKey {
  id        String  @id @default(uuid())
  keyHash   String  @unique
  projectId String
  createdAt BigInt
  revokedAt BigInt?

  @@map("api_keys")
}

/**
 * Execution history of the anchoring process.
 */
model AnchorRun {
  id                   String    @id @default(uuid())
  startedAt            DateTime
  finishedAt           DateTime?
  status               String // "running", "success", "failed"
  projectCount         Int?
  anchorFile           String?
  gitCommit            String? // Legacy field, keeping for now or can be replaced by anchorCommit
  anchorCommit         String?
  previousAnchorCommit String?
  error                String?

  @@map("anchor_runs")
}
