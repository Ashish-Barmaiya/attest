generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model project {
  id        String @id
  createdAt BigInt

  @@map("projects")
}

/**
 * Holds the current head of the audit chain.
 * Exactly ONE row, id = 1.
 */
model ChainHead {
  projectId     String @id
  lastSequence  Int
  lastChainHash String

  @@map("chain_head")
}

/**
 * Append-only audit log.
 * No updates.
 * No deletes.
 */
model AuditEvent {
  projectId     String
  sequence      Int
  payloadJson   String
  payloadHash   String
  prevChainHash String
  chainHash     String
  createdAt     BigInt

  @@id([projectId, sequence])
  @@map("audit_events")
}
