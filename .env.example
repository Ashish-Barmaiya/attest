# Server Configuration
PORT=3000
ATTEST_API_URL=http://localhost:3000
ATTEST_ADMIN_TOKEN=dev-admin-token

# Database
DATABASE_URL="postgresql://attest:attest@localhost:5432/attest?schema=public"

# Rate Limiting
ATTEST_RATE_LIMIT_WINDOW_MS=1000
ATTEST_GLOBAL_RPS=100
ATTEST_PROJECT_RPS=10
ATTEST_KEY_RPS=5

# Anchoring Configuration
ANCHOR_MODE=dev # Options: 'dev' (local file write) or 'prod' (git commit/push)
ANCHOR_DIR=./anchors

# Anchoring (Prod Mode - Git)
# These are required if ANCHOR_MODE=prod
ANCHOR_GIT_REMOTE=origin
ANCHOR_GIT_BRANCH=main
ANCHOR_GIT_AUTHOR_NAME="Attest Anchor Bot"
ANCHOR_GIT_AUTHOR_EMAIL="bot@attest.dev"
